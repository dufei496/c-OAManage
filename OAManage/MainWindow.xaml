<Window x:Class="OAManage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OAManage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="OA系统" Width="800" Height="30" FontSize="20" FontWeight="Light" Background="LightBlue" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Background="AliceBlue">
                <Image Source="/image/001.png" Height="50" Width="50"></Image>
            </Border>
            <Border Grid.Column="1" Background="LightGray"></Border>
            <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="账户" TextAlignment="Center" Margin="0,5,0,5" ></TextBlock>
                <TextBlock Text="密码" Grid.Row="1"  TextAlignment="Center" Margin="0,5,0,5"></TextBlock>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Account}"></TextBox>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Password}"></TextBox>
                <Button Content="登录" Grid.Row="2" Grid.ColumnSpan="2" Click="logon_click" FontSize="20" Background="LightBlue"></Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
